<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="iak.example.alikhsan778.basketballscore.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_weight="6">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/team_a"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textAppearance="?android:textAppearanceSmall"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="100sp"
                android:text="@string/_0"
                android:textColor="#000"
                android:id="@+id/tv_team_a"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3 Points"
                android:layout_marginBottom="16dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:background="#E91E63"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:onClick="mInctreePointTeamA"
                android:fontFamily="monospace"
                android:textStyle="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2 Points"
                android:textAppearance="?android:textAppearanceMedium"
                android:background="#673AB7"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:onClick="mInctwoPointTeamA"
                android:layout_marginBottom="16dp"
                android:fontFamily="monospace"
                android:textStyle="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:onClick="mInconePointTeamA"
                android:textAppearance="?android:textAppearanceMedium"
                android:background="#FF9800"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:fontFamily="monospace"
                android:textStyle="bold"/>


        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:background="#939191"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_weight="6">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/team_b"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textAppearance="?android:textAppearanceSmall"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="100sp"
                android:text="@string/_0"
                android:textColor="#000"
                android:id="@+id/tv_team_b"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_3_points"
                android:onClick="mInctreePointTeamB"
                android:layout_marginBottom="16dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:background="#E91E63"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:fontFamily="monospace"
                android:textStyle="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_2_points"
                android:textAppearance="?android:textAppearanceMedium"
                android:background="#673AB7"
                android:onClick="mInctwoPointTeamB"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:layout_marginBottom="16dp"
                android:fontFamily="monospace"
                android:textStyle="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/free_throw"
                android:textAppearance="?android:textAppearanceMedium"
                android:background="#FF9800"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:onClick="mInconePointTeamB"
                android:fontFamily="monospace"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/reset"
        android:background="#00838F"
        android:textColor="#fff"
        android:textStyle="bold"
        android:id="@+id/btn_reset"
        android:textAppearance="?android:textAppearanceMedium"/>

    <!-- android:onClick="mResetScore"-->




</RelativeLayout>
